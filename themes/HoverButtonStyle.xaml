<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
                    xmlns:svgc="http://sharpvectors.codeplex.com/svgc/">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="CustomButtonStyle.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- HoverAddButtonStyle -->
    <Style x:Key="HoverAddButtonStyle" TargetType="Button" BasedOn="{StaticResource CustomButtonStyle}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <svgc:SvgViewbox x:Name="buttonSvg" Source="/images/buttons/ADD_Sign.svg" Width="50" Height="50"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="buttonSvg" Property="Source" Value="/images/buttons/ADD_PUSH.svg"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

